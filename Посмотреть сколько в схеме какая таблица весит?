-- Текущая схема
SELECT segment_name, segment_type, partition_name, tablespace_name, extents
     , TO_CHAR(ROUND(bytes/1024/1024, 1), '999g990d0') AS mbytes 
FROM user_segments
WHERE segment_name LIKE '%'
ORDER BY segment_name, segment_type DESC, partition_name


-- Указанная я схема
SELECT owner, segment_name, segment_type, partition_name, tablespace_name, extents
     , TO_CHAR(ROUND(bytes/1024/1024, 1), '999g990d0') AS mbytes 
FROM dba_segments
WHERE owner = 'MY_SCHEMA' -- Указание схемы
  AND segment_name LIKE '%'
ORDER BY owner, segment_name, segment_type DESC, partition_name
